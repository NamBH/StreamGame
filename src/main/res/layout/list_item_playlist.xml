<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="8dp">

    <TextView
        android:id="@+id/lblPartTitle"
        android:layout_width="48dp"
        android:layout_height="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:text="@string/playlist_part"
        android:textSize="14sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/lblPartIndex"
        android:layout_width="20dp"
        android:layout_height="16dp"
        android:layout_below="@id/lblPartTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:textSize="12sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/lblPartSlash"
        android:layout_width="8dp"
        android:layout_height="16dp"
        android:layout_below="@id/lblPartTitle"
        android:layout_toEndOf="@id/lblPartIndex"
        android:layout_toRightOf="@id/lblPartIndex"
        android:gravity="center"
        android:text="@string/playlist_slash"
        android:textSize="12sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/lblPartCount"
        android:layout_width="20dp"
        android:layout_height="16dp"
        android:layout_below="@id/lblPartTitle"
        android:layout_toEndOf="@id/lblPartSlash"
        android:layout_toRightOf="@id/lblPartSlash"
        android:gravity="center"
        android:textSize="12sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@id/lblPartTitle"
        android:layout_toRightOf="@id/lblPartTitle"
        android:layout_toStartOf="@+id/chkPlayed"
        android:layout_toLeftOf="@+id/chkPlayed"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textSize="20sp"
        />

    <CheckBox
        android:id="@+id/chkPlayed"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:clickable="false"
        />

</RelativeLayout>